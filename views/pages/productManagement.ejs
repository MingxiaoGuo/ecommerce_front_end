<!DOCTYPE html>
<html>
<head>
 <% include ../partial/head %>
</head>
<body>
<% include ../partial/header %>
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-md-4">
        <button class="btn btn-success btn-lg" id="btnCreateNewProduct">Create New Product</button>
      </div>
    </div>
    <div class="row">
      <!-- [START] product list -->
      <% for (var i = 0; i < productList.length; i++) { %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail myProductOverviewItem">
            <!-- product picture -->
            <div style="height: 260px;">
              <img src=<%= productList[i].product.productPhotos[0] %> alt=<%= productList[i].product.name %> >
            </div>
            <div class="caption">
              <table class="table table-hover">
                <tr>
                  <td>Name: </td>
                  <td><%= productList[i].product.name %></td>
                </tr>
                <tr>
                  <td>Price: </td>
                  <td><i class="fa fa-usd" aria-hidden="true"></i><%= productList[i].product.price %></td>
                </tr>
                <tr>
                  <td>Inventory: </td>
                  <td><%= productList[i].product.inventory %></td>
                </tr>
              </table>
              <p>
                <button class="btn btn-primary btn-block btnProductDetail" value="<%= productList[i]._id%>">Detail</button>
                <a href="#" class="btn btn-danger btn-block" role="button">Delete</a>
              </p>
            </div>
          </div>
        </div>
      <% } %>
      <!-- [END] product list -->
    </div>
  </div>
<% include ../partial/footer %>
</body>
<script>
  $(document).ready(function () {
    $("#btnCreateNewProduct").on("click", function () {
      window.location.replace("/productManagement/createProduct");
    });
    
    $(".btnProductDetail").on("click", function () {
      var id = $(this).val();
      alert("clicked" + id);
      //console.log(id);
      var url = "/productManagement/productModify/" + id;
      window.location.href = url;
    })
    
  });
</script>
</html>
