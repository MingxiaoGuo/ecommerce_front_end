<html>
    <head>
        <% include ../partial/head %>
    </head>
    <body>
        <% include ../partial/header %>
        <div class="container col-md-6 col-md-offset-3" id="editProfileContainer">
            <h1>Edit Profile</h1>
            <hr>
            <div class="row">
                <!-- left column -->
                <div class="col-md-3">
                    <div class="text-center">
                        <img src="<%= profileUser.profile.profilePhoto %>" class="profile-image img-circle" alt="avatar" style="width: 120px">
                        <h6>Upload a different photo...</h6>

                        <input type="file" class="form-control">
                    </div>
                </div>

                <!-- edit form column -->
                <div class="col-md-9 personal-info">
                    <div class="alert alert-info alert-dismissable">
                        <a class="panel-close close" data-dismiss="alert">Ã—</a>
                        <i class="fa fa-coffee"></i>
                        This is an <strong>.alert</strong>. Use this to show important messages to the user.
                    </div>
                    <h3>Personal info</h3>

                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Username:</label>
                            <div class="col-lg-7">
                                <input class="form-control" type="text" value="<%= profileUser.profile.name %>">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Email:</label>
                            <div class="col-lg-7">
                                <input class="form-control" type="email" value="<%= profileUser.profile.email %>" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Password:</label>
                            <div class="col-md-7">
                                <input class="form-control" type="password" value="<%=profileUser.profile.password %>">
                            </div>
                        </div>
                        <div>
                          <button class="btn btn-default">change password</button>
                        </div>
                        <div class="form-group" hidden>
                            <label class="col-md-3 control-label">Confirm password:</label>
                            <div class="col-md-7">
                                <input class="form-control" type="password" value="11111122333">
                            </div>
                        </div>
                        <hr/>
                        <div class="form-group">
                          <input type="button" class="btn btn-primary" value="Save Changes">
                        </div>
                    </form>
                  <a href="/profile" class="btn btn-default" value="Cancel">Cancel</a>
                </div>
            </div>
        </div>
    </body>
    <%include ../partial/footer.ejs%>
</html>

