<!DOCTYPE html>
<html>
<head>
    <% include ../partial/head %>
</head>
<body>
  <% include ../partial/header %>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-heading">
              Sign In
          </div>
          <div class="panel-body">
            <% if (message.length > 0) { %>
            <div class="alert alert-danger alert-dismissible">
              <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
              </button>
              <span class="glyphicon glyphicon-alert" aria-hidden="true"></span>
              <%= message %>
            </div>
            <% } %>
            <!-- [START] Login Form -->
            <form action="/login" method="post">
              <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" class="form-control" name = "email" id="inputEmail" placeholder="Email" required>
              </div>
              <div class="form-group">
                <label for="inputPassword">Password</label>
                <input type="password" class="form-control" name = "password" id="inputPassword" placeholder="Password" required>
              </div>
              <button type="submit" class="btn btn-primary" id="btnSubmit">Sign In</button>
            </form>
            <!-- [END] Login Form -->
            <br/>
            <!-- [START] facebook login button -->
            <p>
              <a class="btn btn-social  btn-facebook" href="/auth/facebook">
                  <span class="fa fa-facebook"></span> Sign in with Facebook
              </a>
            </p>
            <!-- [END] facebook login button -->
            <!-- [START] google login button -->
            <p>
              <a class="btn btn-social btn-google" href="/auth/google">
                  <span class="fa fa-google"></span> Sign in with Google
              </a>
            </p>
            <!-- [END] google login button-->
          </div>

          <div class="panel-footer">
              <p>New to BikeStore? <a href="/register">Sign Up</a></p>
          </div>
        </div>
      </div>
    </div><!-- end of row -->
  </div>
  <% include ../partial/footer %>
</body>

</html>
