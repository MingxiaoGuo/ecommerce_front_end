<!DOCTYPE html>
<html>
  <head>
    <% include ../partial/head %>
  </head>
  <body>
  <% include ../partial/header %>
    <div class="container">
      <div class="panel panel-default" style="margin-top: 50px;">
        <div class="panel-heading">
          <h3 class="panel-title myPanelTitle">Instance Overview</h3>
        </div>
        <div class="panel-body" style="background: #DDDDDD">
          <div class="row">
            <button class="btn btn-success" style="margin-left: 30px; margin-top: 20px; margin-bottom: -15px;">Launch Instance</button>
          </div>
            <% for (var i = 0; i < serverList.length; i++) { %>
          <div class="col-md-4">
            <div class="card">
              <div class="header">
                <h4 class="title">Instance <%= i + 1 %></h4>
                <p class="category">AWS instance</p>
              </div>
              <div class="content">
                <div class="row instanceOverviewRow">
                  <div class="col-md-10">
                    <h5>Location: <%= serverList[i].location%></h5>
                  </div>
                </div>
                <div class="row instanceOverviewRow">
                  <div class="col-md-10">
                    <h5>Status: <%= serverList[i].status%></h5>
                  </div>
                </div>
                <div class="row instanceOverviewRow">
                  <div class="col-md-10">
                    <h5>Type: <%= serverList[i].instance_type %></h5>
                  </div>
                </div>
                <div class="row instanceOverviewRow">
                  <div class="col-md-10">
                    <h5>Cost: <%= serverList[i].cost %></h5>
                  </div>
                </div>
                <div class="footer">
                  <hr>
                  <div class="chart-legend">
                    <button class="btn btn-primary">Detail</button>
                    <button class="btn btn-danger">Stop</button>
                  </div>
                  <!--<hr>
                  <div class="stats">
                    <i class="ti-timer"></i> Data retrieved 1 min ago
                  </div>-->
                </div>
              </div>
            </div>
          </div>
            <% } %>
          <!-- [END] single instance overview -->
        </div>
      </div>
    </div>

    <div class="row" style="margin: auto;">
      <div class="col-lg-4 col-lg-offset-2">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title myPanelTitle">Load Balancer</h3>
          </div>
          <div class="panel-body">
            <ul class="myServerOverviewListItem">
              <li>Attribute 1: <%= loadBalancer.attribute1%></li>
              <li>Attribute 2: <%= loadBalancer.attribute2%></li>
              <li>Attribute 3: <%= loadBalancer.attribute3%></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title myPanelTitle">Auto Scaling</h3>
          </div>
          <div class="panel-body">
            <ul class="myServerOverviewListItem">
              <li>Attribute 1: <%= loadBalancer.attribute1%></li>
              <li>Attribute 2: <%= loadBalancer.attribute2%></li>
              <li>Attribute 3: <%= loadBalancer.attribute3%></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% include ../partial/footer %>
  </body>
</html>
